<div class="container-fluid" id="main-container">
  <h1>Burgers</h1>
  <div class="row">
    <div class="col-md-5">
      <h2>EAT ME!</h2>

          <ul>
            {{#each burgers}} {{#unless consumed}} {{> burgers/burger-block consumed=true}} {{/unless}} {{/each}}
          </ul>

    </div>

    <div class="col-md-5">
      <h2>Order Me Again!</h2>

          <ul>
            {{#each burgers}} {{#if consumed}} {{> burgers/burger-block consumed=false}} {{/if}} {{/each}}
          </ul>

    </div>
</div>
<div class="row">
    <h2>Add a New Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>